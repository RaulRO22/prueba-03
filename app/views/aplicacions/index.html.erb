<p id="notice"><%= notice %></p>

<div class="container">
<center>
<h1>Products</h1>
<br>
<%= link_to 'New Aplicacion', new_aplicacion_path, class: "btn btn-waning" %>
</center>
<br>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Product Name</th>
      <th scope="col">Descripcion</th>
      <th scope="col" colspan="3"><center>Actions</center></th>
    </tr>
  </thead>
  <tbody>
    <% @aplicacions.each do |aplicacion| %>
      <tr>
        <td><%= aplicacion.nombre %></td>
        <td><%= aplicacion.descripcion %></td>
        <td><%= link_to 'Show', aplicacion %></td>
        <td><%= link_to 'Edit', edit_aplicacion_path(aplicacion) %></td>
        <td><%= link_to 'Destroy', aplicacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>